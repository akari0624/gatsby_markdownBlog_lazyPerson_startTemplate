{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": ["airbnb",
              "plugin:react/recommended"],
  "parser":"babel-eslint",
  "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true
      },
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "markdown"
  ],
  "rules": {
      "indent": [
          "warn",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "off",
          "never"
      ],
      "no-console": "off",
      "react/display-name":["off"],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "globals": {
      "describe":false,
      "beforeEach":false,
      "global":false,
      "__dirname":false,
      "module":false,
      "require":false
  }
}